{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV", "AUTH_PORT", "FRONTEND_URL", "CORE_SERVICE_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NODE_ENV", "AUTH_PORT", "FRONTEND_URL"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "AUTH_PORT",
        "FRONTEND_URL",
        "CORE_SERVICE_URL",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "JWT_ACCESS_SECRET",
        "JWT_REFRESH_SECRET",
        "JWT_ACCESS_EXPIRES_IN",
        "JWT_REFRESH_EXPIRES_IN"
      ]
    }
  }
}
