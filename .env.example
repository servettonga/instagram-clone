# Copy this file to .env and update values as needed
# cp .env.example .env

# ======================================
# GENERAL CONFIGURATION
# ======================================
NODE_ENV=development

# ======================================
# DATABASE CONFIGURATION
# ======================================

# PostgreSQL (Main Database)
POSTGRES_HOST=localhost
POSTGRES_DB=innogram
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password
POSTGRES_PORT=5432

# Application Database User (used by applications)
APP_DB_USER=innogram_user
APP_DB_PASSWORD=innogram_app_password

# MongoDB (Messages/Chat)
MONGO_USERNAME=admin
MONGO_PASSWORD=secure_mongo_password
MONGO_PORT=27017

# Redis (Cache/Sessions)
REDIS_PASSWORD=secure_redis_password
REDIS_PORT=6379

# ======================================
# AUTHENTICATION SERVICE
# ======================================
AUTH_PORT=4000
FRONTEND_URL=http://localhost:3000

# Core Service
CORE_SERVICE_URL=http://localhost:8000

# JWT Configuration
JWT_ACCESS_SECRET=jwt_access_secret_minimum_32_characters_long
JWT_REFRESH_SECRET=jwt_refresh_secret_minimum_32_characters_long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ======================================
# CORE SERVER
# ======================================
CORE_SERVER_PORT=8000
AUTH_SERVICE_URL=http://localhost:4000

# Database URLs (Development)
DATABASE_URL="postgresql://innogram_user:innogram_app_password@localhost:5433/innogram?schema=public"
MONGODB_URL="mongodb://admin:secure_mongo_password@localhost:27017/innogram_messages?authSource=admin"

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760    # 10MB in bytes
MAX_IMAGE_SIZE=10485760   # 10MB in bytes
MAX_VIDEO_SIZE=104857600  # 100MB in bytes (for future video support)

# ======================================
# CLIENT APPLICATION
# ======================================
CLIENT_PORT=3000

# Next.js Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_AUTH_URL=http://localhost:4000
NEXTAUTH_SECRET=nextauth_secret_minimum_32_characters_long
NEXTAUTH_URL=http://localhost:3000
